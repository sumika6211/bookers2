<%= render 'list', book: @book ,user: @user %>

<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <% if current_user == @book.user %>
        <td>
          <%= link_to user_path(current_user) do %>
            <%= image_tag current_user.get_profile_image(80,80) %><br>
            <%= current_user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to "#{@book.title}", book_path(@book.id) %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <td>
          <%= link_to 'Edit', edit_book_path(@book.id) %>
        </td>
        <td>
          <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
        </td>
      <% else %>
        <td>
          <%= link_to user_path(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(80,80) %><br>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to "#{@book.title}", book_path(@book.id) %>
        </td>
        <td>
          <%= @book.body %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>