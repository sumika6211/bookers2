<div class="container">
  <% if @book.errors.any? %>
    <div class="error-box">
      <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
      <ul class="error-message">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row" >
    <div class="col-md-3">
      <%= render 'list', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1" >
      <div><%= render 'search' %></div>
      <h2>Books</h2>
      <div class="container">
        <div class="row">
          <div><%= link_to "新しい順", books_path %> |</div>
          <div class="ml-1"><%= link_to " 評価の高い順", books_path(favorites: "favorite") %></div>
        </div>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image(80,80) %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
              <td class="favorite-button__<%= book.id %>">
                <%= render 'favorites/favorite_button', book: book %>
              </td>
              <td>コメント数：<%= book.book_comments.count %></td>
              <td><%= render 'static_rate', book: book %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>