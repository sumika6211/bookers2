<%= render 'books/list', book: @book, user: @user %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <%= link_to user_path(book.user_id) do %>
          <td><%= image_tag book.user.get_profile_image(80,80) %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>