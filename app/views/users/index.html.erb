<div class = "container">
  <div class = "row">

    <div class = "col-md-3">
      <%= render 'books/list', book: @book %>
    </div>

    <div class = "col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class = "table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(80,80) %></td>
              <td><%= user.name %></td>
              <% if current_user.followeds?(user) %>
                <td><%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete %></td>
              <% else %>
                <td><%= link_to 'フォローする', user_relationships_path(user.id), method: :post %></td>
              <% end %>
              <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>