<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/d9d2324d55.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark" >
        <div class="container" >
          <div class="navbar-brand p-3"><%= link_to "Bookers", root_path, class: "text-light" %></div>
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <div class="row ml-auto">
                <li>
                  <%= link_to user_path(current_user.id), class: "nav-link text-light" do %>
                    <i class="fa-solid fa-home"></i> Home
                  <% end %>
                </li>
                <li>
                  <%= link_to users_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-users"></i> Users
                  <% end %>
                </li>
                <li>
                  <%= link_to books_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-book-open"></i> Books
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light"  do%>
                    <i class="fa-solid fa-sign-out-alt"></i> Log out
                  <% end %>
                </li>
              </div>
            <% else %>
              <div class="row ml-auto">
                <li>
                  <%= link_to root_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-home"></i> Home
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-link"></i> About
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-user-plus"></i> Sign up
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-sign-in-alt"></i> Log in
                  <% end %>
                </li>
              </div>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <p class="flash-message">
      <%= flash[:notice] %>
    </p>

    <%= yield %>

    <footer>
      <div class="container mt-3">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
