<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>

    <div class = "col-md-8 offset-1">
      <h2>Books</h2>
      <table class = "table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <%= link_to user_path(book.user_id) do %>
                <td><%= image_tag book.user.get_profile_image(80,80) %></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>