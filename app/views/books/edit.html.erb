<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path, method: :patch do |f| %>
  <div class = "field">
    <%= f.label :Title %><br />
    <%= f.text_field :title %>
  </div>

  <div class = "field">
    <%= f.label :Opinion %><br />
    <%= f.text_field :body %>
  </div>

  <div class = "actions">
    <%= f.submit ' Update Book ' %>
  </div>
<% end %>

<%= link_to 'Show', book_path(@book.id) %> |
<%= link_to 'Back', books_path %>
