<h2>Follower Users</h2>
<table class="table mt-3">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @followers.each do |follower| %>
      <tr>
        <td><%= image_tag follower.get_profile_image(80,80) %></td>
        <td><%= follower.name %></td>
        <td>フォロー数：<%= follower.followeds.count %></td>
        <td>フォロワー数：<%= follower.followers.count %></td>
        <td><%= link_to 'Show', user_path(follower) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

