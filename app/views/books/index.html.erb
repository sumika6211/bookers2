<%= render 'list', book: @book %>

<h2>Books</h2>
<table>
  <thead>
    <th>
      <tr>Title</tr>
      <tr>Opinion</tr>
    </th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>