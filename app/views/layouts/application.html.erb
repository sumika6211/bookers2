<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/d9d2324d55.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class = "navbar navbar-expand-lg navbar-dark" >
        <div class = "container" >
          <div class = "navbar-brand p-3"><%= link_to "Bookers", root_path %></div>
          <ul class = "navbar-nav">
            <% if user_signed_in? %>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <li class="navbar-nav m-8 ml-auto">
                  <%= link_to user_path(current_user.id) do %>
                    <i class="fa-solid fa-home"></i>Home
                  <% end %>
                </li>
                <li class = "navbar-item m-8">
                  <%= link_to users_path do %>
                    <i class="fa-solid fa-users"></i>Users
                  <% end %>
                </li>
                <li class = "navbar-item m-8">
                  <%= link_to books_path do %>
                    <i class="fa-solid fa-book-open"></i>Books
                  <% end %>
                </li>
                <li class = "navbar-item m-8">
                  <%= link_to destroy_user_session_path, method: :delete  do%>
                    <i class="fa-solid fa-sign-out-alt"></i>Log out
                  <% end %>
                </li>
              </div>
            <% else %>
              <div class="row">
                <li class="col-3 px-8 ml-auto">
                  <%= link_to root_path do %>
                    <i class="fa-solid fa-home"></i>Home
                  <% end %>
                </li>
                <li class = "col-3 px-8">
                  <%= link_to about_path do %>
                    <i class="fa-solid fa-link"></i>About
                  <% end %>
                </li>
                <li class = "col-3 px-8">
                  <%= link_to new_user_registration_path do %>
                    <i class="fa-solid fa-user-plus"></i>Sign up
                  <% end %>
                </li>
                <li class = "col-3 px-8">
                  <%= link_to new_user_session_path do %>
                    <i class="fa-solid fa-sign-in-alt"></i>Log in
                  <% end %>
                </li>
              </div>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer>
      <div class = "container mt-3">
        <div class = "row">
          <div class = "mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
